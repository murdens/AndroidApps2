<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="18dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/enter_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter_title"/>

    <EditText
        android:id="@+id/enter_thoughts_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter_thought"/>

    <Button
        android:id="@+id/save_button"
        android:text="@string/save_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/show_button"
        android:text="@string/show_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
<!--
    <Button
        android:id="@+id/update_button"
        android:text="@string/update_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        -->
<!--
    <Button
        android:id="@+id/delete_button"
        android:text="@string/delete_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        -->
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/show_title"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <!-- <TextView
        android:id="@+id/show_thought"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        /> -->
</androidx.core.widget.NestedScrollView>

</LinearLayout>